// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PARENT
  TEACHER
  ADMIN
}

enum AttendanceStatus {
  PRESENT
  ABSENT_EXCUSED
  ABSENT_UNEXCUSED
  HOLIDAY
}

enum NotificationType {
  MEMBERSHIP_RENEWAL
  NEW_HOMEWORK
  NEW_ANNOUNCEMENT
  SCHEDULE_CHANGE
  HOLIDAY_REMINDER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String
  role          UserRole
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  students      Student[]
  notifications Notification[]
  emailPreferences Boolean @default(true)
  inAppPreferences Boolean @default(true)

  @@index([email])
  @@map("users")
}

model Student {
  id          String   @id @default(cuid())
  name        String
  parentId    String
  englishLevel String?  // Beginner, Elementary, Pre-Intermediate, etc.
  targetExam  String?  // KET, PET, or null
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  parent      User         @relation(fields: [parentId], references: [id], onDelete: Cascade)
  enrollments Enrollment[]
  homeworkSubmissions HomeworkSubmission[]
  attendance  Attendance[]

  @@index([parentId])
  @@map("students")
}

model Class {
  id          String   @id @default(cuid())
  name        String
  description String?
  schedule    String? // e.g., "Monday & Wednesday 3:00 PM"
  daysOfWeek  Int[]   // [1, 3] for Monday & Wednesday (1=Mon, 7=Sun)
  startTime   String? // e.g., "15:00" (3:00 PM)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  enrollments Enrollment[]
  lessons     Lesson[]
  homeworkAssignments HomeworkAssignment[]
  attendance  Attendance[]

  @@map("classes")
}

model Enrollment {
  id              String   @id @default(cuid())
  studentId       String
  classId         String
  classesRemaining Int     @default(0)
  totalClasses    Int      @default(0)
  classesPerWeek  Int      @default(2) // For renewal date calculation
  startDate       DateTime @default(now())
  renewalDate     DateTime? // Auto-calculated based on schedule
  expirationDate  DateTime?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  class   Class   @relation(fields: [classId], references: [id], onDelete: Cascade)
  attendance Attendance[]

  @@unique([studentId, classId])
  @@index([studentId])
  @@index([classId])
  @@index([expirationDate])
  @@index([renewalDate])
  @@map("enrollments")
}

model Lesson {
  id          String   @id @default(cuid())
  classId     String
  date        DateTime
  bookSeries  String?  // National Geographic, Oxford Phonics, Power Up, Think
  bookLevel   String?  // e.g., "Level 1", "Starter"
  unit        String
  pageNumbers String?  // e.g., "45-50"
  topics      String[] // Array of topics covered
  vocabulary  String[] // Key vocabulary words
  grammarPoints String[] // Grammar concepts taught
  skills      String[] // Reading, Writing, Listening, Speaking
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId])
  @@index([date])
  @@map("lessons")
}

model HomeworkAssignment {
  id          String   @id @default(cuid())
  classId     String
  title       String
  description String
  dueDate     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  class       Class                @relation(fields: [classId], references: [id], onDelete: Cascade)
  submissions HomeworkSubmission[]

  @@index([classId])
  @@index([dueDate])
  @@map("homework_assignments")
}

model HomeworkSubmission {
  id           String   @id @default(cuid())
  assignmentId String
  studentId    String
  fileUrl      String
  fileName     String
  fileSize     Int
  submittedAt  DateTime @default(now())
  notes        String?

  // Relations
  assignment HomeworkAssignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  student    Student            @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([assignmentId])
  @@index([studentId])
  @@map("homework_submissions")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  isRead    Boolean          @default(false)
  emailSent Boolean          @default(false)
  createdAt DateTime         @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  category  String   // e.g., "schedule_change", "holiday", "promotion", "general"
  priority  String   @default("normal") // "low", "normal", "high"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([category])
  @@map("announcements")
}

model Holiday {
  id          String   @id @default(cuid())
  name        String
  date        DateTime
  description String?
  createdAt   DateTime @default(now())

  @@index([date])
  @@map("holidays")
}

model Attendance {
  id           String           @id @default(cuid())
  enrollmentId String
  classId      String
  studentId    String
  date         DateTime
  status       AttendanceStatus
  notes        String?
  markedBy     String          // Teacher ID who marked attendance
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  // Relations
  enrollment Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  class      Class      @relation(fields: [classId], references: [id], onDelete: Cascade)
  student    Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([enrollmentId, date])
  @@index([studentId])
  @@index([classId])
  @@index([date])
  @@map("attendance")
}

